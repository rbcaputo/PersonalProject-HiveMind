{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "HiveMind": "Debug"
    }
  },
  "HiveMind": {
    "Simulation": {
      "TickIntervalMilliseconds": 100,
      "AutoSaveIntervalMinutes": 5,
      "MaxBeeCount": 500,
      "EnableDetailedLogging": true,
      "MaxConcurrentThreads": 4,
      "SimulationSpeedMultiplier": 1.0
    },
    "Environment": {
      "InitialTemperatureCelsius": 25.0,
      "InitialHumidityPercent": 60.0,
      "WeatherChangeFrequencyHours": 6,
      "InitialSeason": "Spring"
    },
    "Monitoring": {
      "ProcessingIntervalMinutes": 5,
      "ReportGenerationIntervalMinutes": 15,
      "CsvExportIntervalMinutes": 30,
      "DataRetentionDays": 30,
      "SaveReportsToFile": true,
      "SaveCsvToFile": true,
      "IncludeEventsInReports": true,
      "IncludeAlertsInReports": true,
      "OutputDirectory": "Outputs",
      "MaxHiveSnapshots": 1000,
      "MaxEventHistory": 10000,
      "AlertNotificationLevel": "Warning",
      "EnablePerformanceMonitoring": true,
      "DashboardRefreshIntervalSeconds": 30
    },
    "Persistence": {
      "Provider": "Json",
      "SaveDirectory": "SaveData",
      "DatabaseFilePath": "SaveData/hivemind.db",
      "MaxBackups": 10,
      "CompressSaveFiles": true,
      "AutoSaveIntervalMinutes": 5,
      "EnableAutoSave": true,
      "BackupIntervalHours": 24,
      "EnableAutomaticBackups": true
    }
  }
}